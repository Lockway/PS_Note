{
	"editor.formatOnSave": true,
	"editor.defaultFormatter": null,
	"editor.tabSize": 2,
	"files.associations": {
		"*.cpp": "cpp",
		"deque": "cpp",
		"list": "cpp",
		"vector": "cpp",
		"xstring": "cpp",
		"exception": "cpp",
		"functional": "cpp",
		"ios": "cpp",
		"istream": "cpp",
		"memory": "cpp",
		"ostream": "cpp",
		"queue": "cpp",
		"streambuf": "cpp",
		"tuple": "cpp",
		"unordered_map": "cpp",
		"utility": "cpp",
		"xhash": "cpp",
		"xiosbase": "cpp"
	},
	"[jsonc]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"C_Cpp.formatting": "clangFormat",
	"C_Cpp.clang_format_style": "{ BasedOnStyle: Google, IndentWidth: 2, UseTab : Never}",
	"[cpp]": {
		"editor.defaultFormatter": "ms-vscode.cpptools"
	},

	"C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: Google, IndentWidth: 2, UseTab : Never}",
	"C_Cpp.vcFormat.newLine.beforeOpenBrace.block": "sameLine"
}
